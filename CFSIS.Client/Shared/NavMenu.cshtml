        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/course/fetch">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Course data
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/districts/fetch">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Districts data
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Orders">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Orders data
            </NavLink>
        </li>
    </ul>
</div>

@functions {
    bool collapseNavMenu = true;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
